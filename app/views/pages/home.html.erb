<div class="banner">
  <h1>Rent a board</h1>
  <h4 class="container">Find a board</h4>
    <%= form_with url: products_path, method: :get, class: "d-flex pb-3 container" do %>
      <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Get skating..."
      %>
      <%= submit_tag "Search", class: "btn btn-dark" %>
    <% end %>
  <div class="home-buttons">
    <div>
      <%= link_to "See all skateboards", products_path %>
    </div>
    <div>
      <%= link_to "Rent out your board", new_product_path %>
    </div>
  </div>
</div>
